<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:backgroundTint="#2196F3"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/id_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="0"
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="London"
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/id_query"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_query"
            android:layout_width="111dp"
            android:layout_height="22dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:text="22 /12/2022"
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/city_query"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/condition_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rainy"
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/time_query"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/time_query"
            app:layout_constraintTop_toBottomOf="@+id/time_query" />

        <TextView
            android:id="@+id/minTemp_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="37dp"
            android:text="15 "
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/im"
            app:layout_constraintStart_toEndOf="@+id/time_query"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MaxTemp_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="25"
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/minTemp_query"
            app:layout_constraintStart_toStartOf="@+id/minTemp_query"
            app:layout_constraintTop_toBottomOf="@+id/minTemp_query" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:text="TextView"
            android:textColor="#E4DEDE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/time_query"
            app:layout_constraintStart_toEndOf="@+id/condition_query"
            app:layout_constraintTop_toBottomOf="@+id/time_query" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>