<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="5dp"
    android:backgroundTint="#2196F3"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/date_req"
            android:layout_width="106dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/alice"
            android:text="22 /12/2022"
            android:textColor="#090909"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city_req" />

        <TextView
            android:id="@+id/condition_req"
            android:layout_width="116dp"
            android:layout_height="0dp"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:text="Sunny"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/date_req"
            app:layout_constraintStart_toEndOf="@+id/city_req"
            app:layout_constraintTop_toTopOf="@+id/city_req" />

        <ImageView
            android:id="@+id/im_req"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.889"
            app:layout_constraintStart_toEndOf="@+id/condition_req"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.176"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/temp_req"
            android:layout_width="68dp"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/alice"
            android:gravity="center|end"
            android:text="25ÂºC"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/condition_req"
            app:layout_constraintEnd_toStartOf="@+id/im_req"
            app:layout_constraintStart_toEndOf="@+id/condition_req"
            app:layout_constraintTop_toTopOf="@+id/condition_req" />

        <TextView
            android:id="@+id/city_req"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="London"
            android:textColor="#FF5722"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/date_req"
            app:layout_constraintStart_toStartOf="@+id/date_req"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_req"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#641DE3"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/maxTemp_req"
            app:layout_constraintEnd_toEndOf="@+id/im_req"
            app:layout_constraintStart_toStartOf="@+id/im_req"
            app:layout_constraintTop_toBottomOf="@+id/im_req"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="94dp"
            android:layout_height="0dp"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:text="10"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/date_req"
            app:layout_constraintStart_toEndOf="@+id/date_req"
            app:layout_constraintTop_toBottomOf="@+id/condition_req" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:text="20"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/temp_req"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/condition_req" />

        <TextView
            android:id="@+id/minTemp_req"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:text="10"
            android:textColor="#090909"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/date_req"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/date_req"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/maxTemp_req"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:text="20"
            android:textColor="#090909"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/minTemp_req"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/minTemp_req"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>